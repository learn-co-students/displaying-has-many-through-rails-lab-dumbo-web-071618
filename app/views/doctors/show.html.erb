<h1><%= @doctor.name %><h1>
<h3>Department: <%= @doctor.department %><h3>
<hr>
<% @doctor.appointments.each do |appointment| %>
  <p>On <%= appointment.appointment_datetime.strftime("%B %e, %l:%M %p") %> at <%= appointment.appointment_datetime.strftime("%l:%M %p") %> with patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></p>
<% end %>
