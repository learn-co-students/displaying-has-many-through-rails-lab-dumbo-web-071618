<%= @doctor.name %><br/><br/>
<%= @doctor.department %><br/><br/>
<% @doctor.appointments.each do |appointment| %>
<%= appointment.appointment_datetime.strftime("%B %-d, %Y at %H:%M") %><br/><br/>
<% patient = appointment.patient %>
<%= link_to patient.name, patient_path(patient) %><br/><br/>
<% end %>
