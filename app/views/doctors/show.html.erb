<h1><%=@doctor.name %></h1>
<br/>
<h4><%= @doctor.department %></h4>
<br/>
<h4>Appointments:</h4>
  <% @doctor.appointments.each do |appointment| %>
  <li><%=appointment.appointment_datetime.strftime("%B %e, %Y at %k:%M")%> with <%=link_to appointment.patient.name, patient_path(appointment.patient) %> in <%= @doctor.department %></li>
  <% end %>
